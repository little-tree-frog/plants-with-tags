<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @garden.banner_url %>');">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>




<div class="row">
  <div class="col-8 mt-3 pl-4">
    <div class="cards">
      <% @garden.plants.each do |plant| %>
      <div class="card-category d-flex flex-column" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= plant.image_url %>')">
        <div>
          <%= plant.name %>
          <%= link_to "+", plant_path(plant), data: { confirm: "Are you sure?" }, class: "card-remove-link", method: :delete %>
        </div>

        <div class="card-tags">
          <% plant.tags.each do |tag| %>
          <span><%= tag.name %></span>
          <% end %>
          <%= link_to "+", new_plant_plant_tag_path(plant) %>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  <div class="mt-3 col-4 pr-5">
    <h4>Add a plant:</h4>
    <button class="btn btn-outline-success toggle-form btn-block mb-2">Toggle form</button>
    <div class="">
      <%= simple_form_for [ @garden, @plant ] do |f| %>
      <%= f.input :name, placeholder: "Palm tree" %>
      <%= f.input :image_url, placeholder: "https://some_nice_image_found_on_google.jpg" %>
      <%= f.submit "Add", class: "btn btn-success btn-block" %>
      <% end %>
    </div>
  </div>
</div>
